<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.androidpro.collors.MainActivity">

    <SeekBar
        android:id="@+id/redSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/redTextView"
        android:layout_marginTop="13dp"
        android:max="255" />

    <TextView
        android:id="@+id/redTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="24dp"
        android:text="Vermelho"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <TextView
        android:id="@+id/greenTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/redTextView"
        android:layout_below="@+id/redTextView"
        android:layout_marginTop="51dp"
        android:text="Verde"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <SeekBar
        android:id="@+id/greenSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/greenTextView"
        android:layout_marginTop="12dp"
        android:max="255" />

    <TextView
        android:id="@+id/blueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/greenTextView"
        android:layout_below="@+id/greenSeekBar"
        android:layout_marginTop="23dp"
        android:text="Azul"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <SeekBar
        android:id="@+id/blueSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/blueTextView"
        android:layout_marginTop="12dp"
        android:max="255" />

    <TextView
        android:id="@+id/selectedColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/blueTextView"
        android:layout_below="@+id/blueSeekBar"
        android:layout_marginTop="27dp"
        android:textAppearance="@android:style/TextAppearance.Medium"
        tools:text="Color" />

    <TextView
        android:id="@+id/color"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/selectedColor"
        android:layout_marginTop="18dp" />
</android.widget.RelativeLayout>
